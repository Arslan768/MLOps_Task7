pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'echo "Building the project"'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Running tests"'
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo "Loading first.groovy script"
                    def customFunction = load 'first.groovy'
                    echo "Script loaded successfully"
                    customFunction.myFunction()
                }
            }
        }
    }
}
